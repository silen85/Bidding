<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CONTENT_BG"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TOP_BG_MAIN"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:paddingLeft="@dimen/title_padding_left"
        android:paddingRight="@dimen/title_padding_right"
        android:paddingTop="@dimen/title_padding_top">

        <LinearLayout
            android:id="@+id/searcher_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_padding"
                android:text="日期搜索"
                android:textColor="@color/MALL_C8"
                android:textSize="@dimen/main_title_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/searcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/searcher_other"
            android:layout_toRightOf="@+id/searcher_date"
            android:background="@drawable/bg_rectangle_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/searcher_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/title_padding_bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="@dimen/title_padding_top"
                android:adjustViewBounds="true"
                android:background="@mipmap/search_b"
                android:clickable="true"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/searcher_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="订单搜索"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/MALL_C8"
                android:textSize="@dimen/edit_text_size"></EditText>


        </LinearLayout>

        <include layout="@layout/title_resize" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scrollbars="none">

        <LinearLayout
