                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="报价单"
                        android:textColor="@color/QUOTE_TXT_COLOR"
                        android:textSize="@dimen/main_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/main_cell_interval"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rectangle_blue_x"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/main_cell_interval_padding"
                            android:paddingTop="@dimen/main_cell_interval_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_cell_interval_txt"
                                android:text="0"
                                android:textColor="@color/QUOTE_TXT_COLOR"
                                android:textSize="@dimen/main_text_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/main_cell_interval_txt"
                                android:text="待报价"
                                android:textColor="@color/QUOTE_TXT_COLOR"
                                android:textSize="@dimen/main_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/main_cell_interval"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rectangle_blue_x"
                            android:clickable="true"
