<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/MALL_C3"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:id="@+id/colum1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.6"
        android:background="@color/MALL_C6"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="@dimen/interval_C"
        android:paddingLeft="@dimen/interval_A"
        android:paddingRight="@dimen/interval_A"
        android:paddingTop="@dimen/interval_C"
        android:singleLine="true"
        android:tag="colum1"
        android:text="2015-08-15"
        android:textColor="@color/BASE_TEXT_COLOR"
        android:textSize="@dimen/F5" />

    <TextView
        android:id="@+id/colum2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:background="@drawable/two_grid_bg2"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="@dimen/interval_C"
        android:paddingLeft="@dimen/interval_A"
        android:paddingRight="@dimen/interval_A"
        android:paddingTop="@dimen/interval_C"
        android:singleLine="true"
        android:tag="colum2"
        android:text="176800"
        android:textColor="@color/BASE_TEXT_COLOR"
        android:textSize="@dimen/F5" />

</LinearLayout>