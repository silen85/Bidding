<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TOP_BG_LEVEL2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/title_padding_bottom"
    android:paddingLeft="@dimen/pl_bidding_add"
    android:paddingRight="@dimen/pr_bidding_add"
    android:paddingTop="@dimen/title_padding_top">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/arrow_back_gray"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/searcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/searcher_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/interval_B"
        android:paddingTop="10dp"
        android:visibility="visible">


        <ImageView
            android:id="@+id/searcher_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/searcher_x"
            android:clickable="true" />

        <EditText
            android:id="@+id/searcher_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="18"
            android:hint="请输入需要商品"
            android:inputType="text"
            android:paddingBottom="@dimen/interval_G"
            android:paddingTop="@dimen/interval_F"
            android:singleLine="true"
            android:textColor="@color/BASE_TEXT_COLOR"
            android:textSize="@dimen/edit_text_size"></EditText>


    </LinearLayout>


</LinearLayout>