                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/main_cell_interval_txt"
                            android:text="已收货"
                            android:textColor="@color/BIDDING_TXT_COLOR"
                            android:textSize="@dimen/main_text_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/interval_A"
                android:layout_marginRight="@dimen/interval_A"
                android:layout_marginTop="@dimen/interval_C"
                android:baselineAligned="false"
                android:gravity="left|top"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/quotelist_all"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rectangle_blue_x"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/main_cell_interval_padding"
                    android:paddingTop="@dimen/main_cell_interval_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/quote" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="报价单"
                        android:textColor="@color/QUOTE_TXT_COLOR"
                        android:textSize="@dimen/main_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/main_cell_interval"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/LinearLayout_q1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rectangle_blue_x"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/main_cell_interval_padding"
                            android:paddingTop="@dimen/main_cell_interval_padding"
                            android:tag="1">

                            <ProgressBar
                                android:id="@+id/loading_q1"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_cell_interval_txt"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/text_q1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_cell_interval_txt"
