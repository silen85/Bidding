                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/main_cell_interval"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/LinearLayout_b1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_green_x"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/main_cell_interval_padding"
                        android:paddingTop="@dimen/main_cell_interval_padding"
                        android:tag="1">

                        <ProgressBar
                            android:id="@+id/loading_b1"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_cell_interval_txt"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/text_b1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_cell_interval_txt"
                            android:text="0"
                            android:textColor="@color/BIDDING_TXT_COLOR"
                            android:textSize="@dimen/main_text_size"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/main_cell_interval_txt"
                            android:text="未提交"
                            android:textColor="@color/BIDDING_TXT_COLOR"
                            android:textSize="@dimen/main_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_b4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/main_cell_interval"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_green_x"
