                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_cell_interval_txt"
                            android:text="0"
                            android:textColor="@color/QUOTE_TXT_COLOR"
                            android:textSize="@dimen/main_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/main_cell_interval_txt"
