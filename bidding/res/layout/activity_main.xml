                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/main_cell_interval_padding"
                        android:paddingTop="@dimen/main_cell_interval_padding">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/bidding" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="竞价单"
                            android:textColor="@color/BIDDING_TXT_COLOR"
                            android:textSize="@dimen/main_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/main_cell_interval"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/LinearLayout_b2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rectangle_green_x"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/main_cell_interval_padding"
                            android:paddingTop="@dimen/main_cell_interval_padding"
                            android:tag="2">

                            <ProgressBar
                                android:id="@+id/loading_b2"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_cell_interval_txt"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/text_b2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_cell_interval_txt"
                                android:text="0"
                                android:textColor="@color/BIDDING_TXT_COLOR"
