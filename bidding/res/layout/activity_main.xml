                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout_b6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/main_cell_interval"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rectangle_green_x"
