                                android:textColor="@color/QUOTE_TXT_COLOR"
                                android:textSize="@dimen/main_text_size"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/main_cell_interval_txt"
                                android:text="待报价"
                                android:textColor="@color/QUOTE_TXT_COLOR"
                                android:textSize="@dimen/main_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout_q2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/main_cell_interval"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rectangle_blue_x"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/main_cell_interval_padding"
                            android:paddingTop="@dimen/main_cell_interval_padding"
                            android:tag="2">

                            <ProgressBar
                                android:id="@+id/loading_q2"
