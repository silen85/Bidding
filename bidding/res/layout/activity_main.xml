                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/main_cell_interval"
                        android:layout_weight="1"
                        android:background="@drawable/bg_rectangle_green_x"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/main_cell_interval_padding"
                        android:paddingTop="@dimen/main_cell_interval_padding"
                        android:tag="7">

                        <ProgressBar
                            android:id="@+id/loading_b7"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_cell_interval_txt"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/text_b7"
                            android:layout_width="wrap_content"
